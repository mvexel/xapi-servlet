<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http:/java.sun.com/dtd/web-app_2_3.dtd">
  <context-param>
    <param-name>xapi.max_bbox_area</param-name>
    <param-value>10.0</param-value>
  </context-param>
  <context-param>
    <param-name>xapi.db.host</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>xapi.db.username</param-name>
    <param-value>osm</param-value>
  </context-param>
  <context-param>
    <param-name>xapi.db.password</param-name>
    <param-value>osm</param-value>
  </context-param>
  <context-param>
    <param-name>xapi.db.database</param-name>
    <param-value>vermont</param-value>
  </context-param>
  <context-param>
    <param-name>xapi.workingDirectory</param-name>
    <param-value>/osm/tmp</param-value>
  </context-param>

  <servlet>
    <servlet-name>Api</servlet-name>
    <servlet-class>com.yellowbkpk.geo.xapi.servlet.ApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Api</servlet-name>
    <url-pattern>/api/0.6/node/*</url-pattern>
    <url-pattern>/api/0.6/way/*</url-pattern>
    <url-pattern>/api/0.6/relation/*</url-pattern>
    <url-pattern>/api/0.6/nodes</url-pattern>
    <url-pattern>/api/0.6/ways</url-pattern>
    <url-pattern>/api/0.6/relations</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Xapi</servlet-name>
    <servlet-class>com.yellowbkpk.geo.xapi.servlet.XapiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Xapi</servlet-name>
    <url-pattern>/api/0.6/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CapabilitiesServlet</servlet-name>
    <servlet-class>com.yellowbkpk.geo.xapi.servlet.CapabilitiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CapabilitiesServlet</servlet-name>
  	<url-pattern>/api/capabilities</url-pattern>
  	<url-pattern>/api/0.6/capabilities</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Stats</servlet-name>
  	<servlet-class>com.yellowbkpk.geo.xapi.admin.StatsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Stats</servlet-name>
  	<url-pattern>/admin/stats</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>IpBlock</servlet-name>
    <servlet-class>com.yellowbkpk.geo.xapi.admin.IpBlockServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IpBlock</servlet-name>
    <url-pattern>/admin/block</url-pattern>
  </servlet-mapping>
  
  <!-- 
  <servlet>
  	<servlet-name>Killer</servlet-name>
  	<servlet-class>com.yellowbkpk.geo.xapi.admin.ThreadKillServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Killer</servlet-name>
  	<url-pattern>/admin/kill</url-pattern>
  </servlet-mapping>
  -->
</web-app>
